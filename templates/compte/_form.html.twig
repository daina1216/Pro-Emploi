
    <div class="card mt-10" style="max-width: 40rem; margin: auto;">
            
            <div class="card-header">
                <div class="row">
                    <h1>Inscription</h1>
                </div>
            </div>

            <div class="card-body">

                <div class="container">

                    {{ form_errors(form) }}

                    {{ form_start(form) }}

                        <div class="form-group mt-3">
                            {{ form_row(form.Nom) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_row(form.Prenoms) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_row(form.email) }}
                        </div>
                        
                        <div class="form-group mt-3">
                            {{ form_row(form.plainPassword, {
                                label: 'Password'
                            }) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_row(form.roles) }}
                        </div>

                        <div class="form-submit mt-3 text-center">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                        

                    {{ form_end(form) }}

                </div>
                    
            </div>

    </div>
   



