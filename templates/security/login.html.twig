{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

  <div class="card mt-5" style="max-width: 40rem; margin: auto;">
            
            <div class="card-header">
                <div class="row">
                    <h1>Connectez-vous svp</h1>
                </div>
            </div>

            <div class="card-body">

                <div class="container">

                   <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        {% include 'configuration/messageFlash.html.twig' %}

                        <div class="form-group mt-3">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="form-group mt-3">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                        </div>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        <div class="form-group mt-3">
                            <label for="inputPassword">
                                Vous n'avez pas de compte? <a class="text-decoration-none" href="{{ path('app_register')}}">Inscrivez-vous ici</a> 
                            </label>
                        </div>

                        <div class="form-group mt-3">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Connexion
                            </button>
                        </div>
                       



                    </form>

                      

                </div>
                    
            </div>

    </div>

{% endblock %}
